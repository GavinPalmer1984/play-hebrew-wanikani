GET        /                       controllers.UserController.login_page()
# + nocsrf
POST       /login                  controllers.UserController.login()

# users
# users - create
GET        /users/signup           controllers.UserController.get_signup()
POST       /users/create           controllers.UserController.post_signup()
# users - read
GET        /users/all              controllers.UserController.show_all()
GET        /users/read/:id         controllers.UserController.read(id: Int)
# users - update
#
POST       /users/update/:id       controllers.UserController.update(id: Int)
# users - delete
#
POST       /users/delete/:id       controllers.UserController.delete(id: Int)

